              "raw": "{{baseUrl}}/api/approvals/pending?page=1&pageSize=20",
              "host": ["{{baseUrl}}"],
              "path": ["api", "approvals", "pending"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "pageSize", "value": "20" }
              ]
