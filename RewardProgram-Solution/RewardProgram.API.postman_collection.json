{
  "info": {
    "name": "RewardProgram API",
    "description": "RewardProgram API - Auth, Approvals, Lookups",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://staging.raedrewardapp.com",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "pinId",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Registration",
          "item": [
            {
              "name": "Register Shop Owner",
              "request": {
                "method": "POST",
                "header": [],
                "body": {
                  "mode": "formdata",
                  "formdata": [
                    { "key": "StoreName", "value": "متجر تجريبي", "type": "text" },
                    { "key": "OwnerName", "value": "أحمد محمد", "type": "text" },
                    { "key": "MobileNumber", "value": "0500000099", "type": "text" },
                    { "key": "VAT", "value": "300000000000003", "type": "text" },
                    { "key": "CRN", "value": "1000000001", "type": "text" },
                    { "key": "RegionId", "value": "REGION_ID_HERE", "type": "text" },
                    { "key": "CityId", "value": "CITY_ID_HERE", "type": "text" },
                    { "key": "DistrictId", "value": "", "type": "text" },
                    { "key": "ShopImage", "value": "", "type": "file" },
                    { "key": "NationalAddress.BuildingNumber", "value": "1234", "type": "text" },
                    { "key": "NationalAddress.Street", "value": "شارع الملك فهد", "type": "text" },
                    { "key": "NationalAddress.PostalCode", "value": "12345", "type": "text" },
                    { "key": "NationalAddress.SubNumber", "value": "1", "type": "text" }
                  ]
                },
                "url": {
                  "raw": "{{baseUrl}}/api/auth/register/shop-owner",
                  "host": ["{{baseUrl}}"],
                  "path": ["api", "auth", "register", "shop-owner"]
                }
              },
              "response": [],
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "exec": [
                      "if (pm.response.code === 200) {",
                      "    var json = pm.response.json();",
                      "    pm.collectionVariables.set('pinId', json.pinId);",
                      "}"
                    ],
                    "type": "text/javascript"
                  }
                }
              ]
            },
            {
              "name": "Register Seller",
              "request": {
                "method": "POST",
                "header": [
                  { "key": "Content-Type", "value": "application/json" }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"name\": \"بائع تجريبي\",\n  \"mobileNumber\": \"0500000098\",\n  \"shopCode\": \"SHOP_CODE_HERE\"\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/api/auth/register/seller",
                  "host": ["{{baseUrl}}"],
                  "path": ["api", "auth", "register", "seller"]
                }
              },
              "response": [],
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "exec": [
                      "if (pm.response.code === 200) {",
                      "    var json = pm.response.json();",
                      "    pm.collectionVariables.set('pinId', json.pinId);",
                      "}"
                    ],
                    "type": "text/javascript"
                  }
                }
              ]
            },
            {
              "name": "Register Technician",
              "request": {
                "method": "POST",
                "header": [
                  { "key": "Content-Type", "value": "application/json" }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"name\": \"فني تجريبي\",\n  \"mobileNumber\": \"0500000097\",\n  \"regionId\": \"REGION_ID_HERE\",\n  \"cityId\": \"CITY_ID_HERE\",\n  \"districtId\": null,\n  \"postalCode\": \"12345\"\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/api/auth/register/technician",
                  "host": ["{{baseUrl}}"],
                  "path": ["api", "auth", "register", "technician"]
                }
              },
              "response": [],
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "exec": [
                      "if (pm.response.code === 200) {",
                      "    var json = pm.response.json();",
                      "    pm.collectionVariables.set('pinId', json.pinId);",
                      "}"
                    ],
                    "type": "text/javascript"
                  }
                }
              ]
            },
            {
              "name": "Verify Registration OTP",
              "request": {
                "method": "POST",
                "header": [
                  { "key": "Content-Type", "value": "application/json" }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"pinId\": \"{{pinId}}\",\n  \"otp\": \"000000\"\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/api/auth/register/verify",
                  "host": ["{{baseUrl}}"],
                  "path": ["api", "auth", "register", "verify"]
                }
              },
              "response": []
            }
          ]
        },
        {
          "name": "Login",
